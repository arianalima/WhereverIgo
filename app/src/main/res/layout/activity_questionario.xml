<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bernardojr.whereverigo.gui.QuestionarioActivity"
    android:background="@color/colorLogoBackground">

    <TextView
        android:id="@+id/questionario_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questionario_txt_mensagem"
        android:textColor="@color/colorWhite"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/questionario_btn_prox" />


    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="400dp"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/questionario_txt"
        android:layout_alignParentStart="true">

    </GridView>


    <Button
        android:id="@+id/questionario_btn_prox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/questionario_btn_prox"
        android:layout_below="@+id/gridView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp" />

    <!--
    <ProgressBar
        android:id="@+id/questionario_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MProgressBar"
        android:layout_alignBottom="@+id/questionario_btn_prox"
        android:layout_alignEnd="@+id/questionario_txt"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="16dp" />
    -->

</RelativeLayout>
